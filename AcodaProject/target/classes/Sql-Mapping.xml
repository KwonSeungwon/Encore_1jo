<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userInfo">

<resultMap type="com.acoda.vo.MemberVO" id="LoginResult">
<result column="ID" property="id"/>
<result column="PW" property="pw"/>
<result column="USER_NUMBER" property="user_number"/>
</resultMap>




<select id="emailcount" parameterType="String" resultType="Integer">
select count(*) from member where email = #{email}
</select>

<select id="idcount" parameterType="com.acoda.vo.MemberVO" resultType="Integer">
select count(*) from member where id = #{id}
</select>



<select id="logidncheck" resultType="Integer" parameterType="LoginResult">
select count(*) from member where id = #{id} and pw = #{pw}
</select>

<select id="totalAcount" resultType="Integer">
select count(*) from member
</select>



	<select id="selectalluser" resultType="userInfo">
		select * from member
	</select>

	<insert id="insertGuide" parameterType="com.acoda.vo.MemberVO">
		insert into member
		member(user_number,name,sex,rating, id, pw, phone , address,email,join_date,birth,job,profile,place)
		values(member_seq.nextval,#{name},#{sex},#{rating},#{id},#{pw},#{phone},#{address},#{email},#{joindate},#{birth},#{job},#{profile},#{place})
	</insert>
	
		<insert id="insertNomal" parameterType="userInfo">
		insert into member(user_number,name,sex,rating,id, pw, phone,address,email,join_date,birth,job)
		values(member_seq.nextval,#{name},#{sex},#{rating},#{id},#{pw},#{phone},#{address},#{email},#{joindate},#{birth},#{job})
	</insert>


	<delete id="deleteUser" parameterType="userInfo">
		delete from member where
		id = #{id} AND pw = #{pw}
	</delete>

	<update id="updateUser" parameterType="userInfo">
		update member set
		#{pw},#{phone},#{address},#{email},#{joindate},#{birth},#{job},#{profile},#{place}
		where id=#{id};
	</update>


	<select id="login" parameterType="String" resultType="userInfo">
		select *
		from member where id = #{id} and pw = #{pw}
	</select>




</mapper>