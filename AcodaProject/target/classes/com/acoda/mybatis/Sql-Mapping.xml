<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userInfo">


	<select id="selectalluser" resultType="userInfo">
		select * from member
	</select>

	<insert id="insertUser" parameterType="userInfo">
		insert into member
		values(#{usernumber},#{rating},#{id},#{pw},#{phone},#{address},#{email},#{joindate},#{birth},#{job},#{profile},#{place})
	</insert>


	<delete id="deleteUser" parameterType="userInfo">
		delete from member where id = #{id} AND pw = #{pw}
	</delete>

	<update id="updateUser" parameterType="userInfo">
		update member set
		#{pw},#{phone},#{address},#{email},#{joindate},#{birth},#{job},#{profile},#{place}
		where id=#{id};
	</update>


	<select id="login" parameterType="String" resultType="userInfo">
		select * from member where id = #{id} and pw = #{pw}
	</select>

</mapper>